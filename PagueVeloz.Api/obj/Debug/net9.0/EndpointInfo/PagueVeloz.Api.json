{
  "openapi": "3.0.4",
  "info": {
    "title": "PagueVeloz.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Account/CriarConta": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Cria uma nova conta bancária",
        "description": "Exemplos de request:\r\n            \r\nCrédito:\r\nPOST /api/Account/CriarConta\r\n{\r\n  \"accountNumber\": \"CC-0001\",\r\n  \"balance\": \"0\",\r\n  \"reservedBalance\": 0,\r\n  \"creditLimit\": \"0\",\r\n  \"referenceId\": \"test-credit-001\"\r\n}",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccountCreateDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta criada",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno"
          }
        }
      }
    },
    "/api/Account/BuscarConta/{AccountNumber}": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Buscar conta bancária",
        "parameters": [
          {
            "name": "AccountNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Account/AtualizarConta/{AccountNumber}": {
      "put": {
        "tags": [
          "Account"
        ],
        "summary": "Atualizar conta bancária",
        "parameters": [
          {
            "name": "AccountNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountUpdateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountUpdateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccountUpdateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Transaction": {
      "post": {
        "tags": [
          "Transaction"
        ],
        "summary": "Processa uma operação financeira (Credit, Debit, Reserve, Capture, Reversal)",
        "description": "Exemplos de request:\r\n            \r\nCrédito:\r\nPOST /api/Transaction\r\n{\r\n  \"operation\": \"Credit\",\r\n  \"accountId\": \"4D1746D2-5770-4820-8381-18EDB119846B\",\r\n  \"amount\": 50000,\r\n  \"currency\": \"BRL\",\r\n  \"referenceId\": \"test-credit-001\"\r\n}\r\n            \r\nTransferência:\r\nPOST /api/transfer\r\n{\r\n  \"operation\": \"Transfer\",\r\n  \"accountId\": \"4D1746D2-5770-4820-8381-18EDB119846B\",\r\n  \"targetAccountId\": \"32317970-9624-40B4-B9EE-80D0146D2E3B\",\r\n  \"amount\": 10000,\r\n  \"currency\": \"BRL\",\r\n  \"referenceId\": \"test-transfer-001\"\r\n}",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransactionCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TransactionCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TransactionCreateDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transação criada",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionCreateDto"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno"
          }
        }
      }
    },
    "/api/Transaction/transferencia": {
      "post": {
        "tags": [
          "Transaction"
        ],
        "summary": "Realizar Trasnferencia bancária",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TransferCreateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountCreateDto": {
        "type": "object",
        "properties": {
          "accountNumber": {
            "type": "string",
            "nullable": true
          },
          "balance": {
            "type": "integer",
            "format": "int64"
          },
          "reservedBalance": {
            "type": "integer",
            "format": "int64"
          },
          "creditLimit": {
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "AccountUpdateDto": {
        "required": [
          "balance",
          "creditLimit",
          "reservedBalance",
          "status"
        ],
        "type": "object",
        "properties": {
          "balance": {
            "type": "integer",
            "format": "int64"
          },
          "reservedBalance": {
            "type": "integer",
            "format": "int64"
          },
          "creditLimit": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "minLength": 1,
            "pattern": "Active|Inactive|Blocked",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "TransactionCreateDto": {
        "type": "object",
        "properties": {
          "operation": {
            "$ref": "#/components/schemas/TransactionType"
          },
          "accountId": {
            "type": "string",
            "description": "ID da conta de origem",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "description": "Valor da operação em centavos",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "description": "Moeda da transação",
            "nullable": true
          },
          "referenceId": {
            "type": "string",
            "description": "ID de referência ou chave de idempotência",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "DTO para criação de transações"
      },
      "TransactionType": {
        "enum": [
          "Credit",
          "Debit",
          "Reserve",
          "Capture",
          "Reversal",
          "Transfer"
        ],
        "type": "string"
      },
      "TransferCreateDto": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "destinationAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "referenceId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}